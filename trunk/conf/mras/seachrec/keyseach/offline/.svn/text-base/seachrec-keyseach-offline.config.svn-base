<config>
	<!--停用词路径-->
	<param name="stopword_path">/user/recsys/searchrec/bookrec/input/stop_word</param>
	<!--用户搜索记录-->
	<param name="search_record_dir">/user/recsys/searchrec/bookrec/input/user_search_history</param>
	<!--当前统计周期内的搜索关键词词频数据-->
	<param name="current_keyword_dir">/user/recsys/searchrec/bookrec/current</param>
	
	
	<!--低频词阈值-->
	<param name="reserved_low_frequency_keyword_value">2</param>
	<!--历史搜索关键词词频数据-->
	<param name="history_keyword_dir">/user/recsys/searchrec/bookrec/history</param>
	<!--汇总后的搜索关键词词频，作为新的历史搜索关键词词频数据-->
	<param name="aggregated_keyword_dir">/user/recsys/searchrec/bookrec/aggregated</param>	
	
	
	<!--图书信息表-->
	<param name="book_info_path">/user/recsys/searchrec/bookrec/input/book_info</param>
	<!--搜索关键词标签权重表-->
	<param name="tag_weight_dir">/user/hadoop/searchkeyoff/tagweight</param>
	<!--单位为M-->
	<param name="tagdict_max_split_size">8</param>
	
	<!--特殊标签-->
	<param name="special_tag_path">/user/recsys/searchrec/bookrec/input/special_tag</param>
	<!--对于每个关键词，选取topk_number个权重值最大的标签-->
	<param name="topk_number">5</param>
	<!--标准化关键词标签权重表-->
	<param name="normalized_topk_tag_weight_dir">/user/recsys/searchrec/bookrec/normalized</param>
	<!--三级标签权重-->
	<param name="three_tag_weight">5,1,10,3,3,1,3</param>
	<!--四级标签权重-->
	<param name="four_tag_weight">5,1,3,10,3,1,3</param>
	<!--通用标签权重-->
	<param name="general_tag_weight">5,1,3,3,10,1,3</param>
</config>